{
  "name": "petersandor.name",
  "version": "3.1.0",
  "private": true,
  "scripts": {
    "start": "next dev",
    "dev": "cross-env INIT_CWD=$PWD next dev",
    "dev:ssl": "set NODE_EXTRA_CA_CERTS=\"$(cat ./certs/.capath)\" node scripts/create-local-server.js",
    "build": "cross-env INIT_CWD=$PWD next build && cross-env NODE_OPTIONS='--experimental-json-modules' node ./scripts/postbuild.mjs",
    "serve": "next start",
    "ssl:setup": "node scripts/create-ssl-certs.js",
    "analyze": "cross-env ANALYZE=true next build",
    "lint": "next lint --fix --dir pages --dir app --dir components --dir lib --dir layouts --dir scripts",
    "generate:post": "node ./scripts/compose.js",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "@headlessui/react": "2.2.0",
    "@heroicons/react": "^2.0.18",
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@next/bundle-analyzer": "15.0.2",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "autoprefixer": "^10.4.13",
    "body-scroll-lock": "^4.0.0-beta.0",
    "contentlayer2": "0.5.3",
    "esbuild": "0.25.2",
    "github-slugger": "^2.0.0",
    "gray-matter": "^4.0.2",
    "hast-util-from-html-isomorphic": "^2.0.0",
    "image-size": "1.0.0",
    "mdx-embed": "^1.1.2",
    "next": "15.1.6",
    "next-contentlayer2": "0.5.3",
    "next-themes": "^0.3.0",
    "pliny": "0.4.0",
    "postcss": "^8.4.24",
    "react": "rc",
    "react-device-detect": "^2.2.3",
    "react-dom": "rc",
    "react-error-boundary": "^4.0.10",
    "react-feather": "^2.0.10",
    "react-github-calendar": "^4.1.1",
    "react-tweet": "^3.2.1",
    "reading-time": "1.5.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-citation": "^2.0.0",
    "rehype-katex": "^7.0.0",
    "rehype-katex-notranslate": "^1.1.4",
    "rehype-preset-minify": "7.0.0",
    "rehype-prism-plus": "^2.0.0",
    "rehype-slug": "^6.0.0",
    "remark": "^15.0.0",
    "remark-gfm": "^4.0.0",
    "remark-github-blockquote-alert": "^1.2.1",
    "remark-math": "^6.0.0",
    "rippleui": "1.12.1",
    "tailwindcss": "^3.4.14",
    "unist-util-visit": "^5.0.0",
    "use-debounce": "^9.0.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.16.0",
    "@svgr/webpack": "^8.0.1",
    "@types/mdx": "^2.0.12",
    "@types/react": "^18.2.73",
    "@types/ua-parser-js": "^0.7.39",
    "@typescript-eslint/eslint-plugin": "^8.12.0",
    "@typescript-eslint/parser": "^8.12.0",
    "@webgpu/types": "^0.1.34",
    "chalk": "^5.2.0",
    "cross-env": "^7.0.3",
    "dedent": "^0.7.0",
    "devcert": "^1.2.2",
    "eslint": "^9.14.0",
    "eslint-config-next": "15.1.6",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.0",
    "globals": "^15.12.0",
    "husky": "^9.0.0",
    "lint-staged": "^13.0.0",
    "patch-package": "^8.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "typescript": "^5.1.3"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "eslint --fix"
    ],
    "*.+(js|jsx|ts|tsx|json|css|md|mdx)": [
      "prettier --write"
    ]
  },
  "overrides": {
    "@mdx-js/react": {
      "react": "$react"
    },
    "@mdx-js/loader": {
      "react": "$react"
    },
    "mdx-embed": {
      "@mdx-js/react": "$@mdx-js/react"
    }
  }
}
